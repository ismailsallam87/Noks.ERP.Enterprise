@using Microsoft.AspNet.Identity
<div id="navigation">
    <div class="profile-picture">
        <a href="@Url.Action("Index", "Dashboard")">
            <img src="~/Images/profile.png" class="img-circle circle-logo m-b" alt="logo">
        </a>

        <div class="stats-label text-color">
            <span class="font-bold word-wrap">@User.Identity.Name</span>

            <div class="dropdown">
                <a class="dropdown-toggle" href="#" data-toggle="dropdown">
                    <small class="text-muted">My Profile <b class="caret"></b></small>
                </a>
                <ul class="dropdown-menu animated fadeInRight m-t-xs">
                    <li><a href="@Url.Action("Contacts","Profile")">Contacts</a></li>
                    <li><a href="@Url.Action("Index","Profile")">Profile</a></li>
                    <li><a href="@Url.Action("Analytics","Profile")">Analytics</a></li>
                    <li class="divider"></li>
                    <li class="logout-li">
                        @if (Request.IsAuthenticated)
                        {
                            using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                            {
                                @Html.AntiForgeryToken()
                                <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
                            }
                        }
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <ul class="nav metismenu" id="side-menu">
        <li class="@Html.IsSelected(controller: "Dashboard")">
            <a href="@Url.Action("Index", "Dashboard")"> <span class="nav-label">Dashboard</span> <span class="label label-success pull-right">v.1</span> </a>
        </li>
        <li class="@Html.IsSelected(controller: "Analytics")">
            <a href="@Url.Action("Index", "Analytics")"> <span class="nav-label">Analytics</span><span class="label label-warning pull-right">DEV</span> </a>
        </li>
        <li class="@Html.IsSelected(controller: "MeetingRooms")">
            <a href="#"><span class="nav-label">Setup</span><span class="fa arrow"></span> </a>
            <ul class="nav nav-second-level">
                <li class="@Html.IsSelected(action: "SetUp")"><a href="@Url.Action("SetUp", "Meetingrooms")">Setup</a></li>
                <li class="@Html.IsSelected(action: "Index")"><a href="@Url.Action("Index", "Meetingrooms")">Meeting Rooms</a></li>
                <li class="@Html.IsSelected(action: "Reservations")"><a href="@Url.Action("Reservations", "Meetingrooms")">Reservations</a></li>
                <li class="@Html.IsSelected(action: "receptionist")"><a href="@Url.Action("receptionist", "Meetingrooms")">Receptionist</a></li>
                <li class="@Html.IsSelected(action: "MeetingRoom_Board")"><a href="@Url.Action("MeetingRoom_Board", "Meetingrooms")">Reservation Board</a></li>
                <li class="@Html.IsSelected(action: "Users")"><a href="@Url.Action("Users", "Meetingrooms")">User Management</a></li>
            </ul>
        </li>
    </ul>
</div>