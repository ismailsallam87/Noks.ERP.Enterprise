@using MeetingRooms_DAL
@model SP_Get_Meeting_Rooms_By_Id_Result
<div class="modal-content">
    <div class="color-line"></div>
    <div class="modal-header text-center">
        <h4 class="modal-title">Update Meeting Room</h4>
    </div>
    <div class="modal-body">
        <div class="panel-body">
            <form method="get" class="form-horizontal">
                <div class="form-group">
                    <label class="col-sm-2 control-label">Name:</label>
                    <div class="col-sm-10">
                        <input id="name_" type="text" value="@Model.Name" class="form-control">
                        <span class="help-block m-b-none" id="name_spn_">you can add a new meeting room' name within 50 characters</span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Description:</label>
                    <div class="col-sm-10">
                        <textarea id="description_" min="1" type="text" class="form-control" rows="5" cols="10">@Model.Description</textarea>
                        <span class="help-block m-b-none">you can add a new description within 500 characters</span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Capacity:</label>
                    <div class="col-sm-10">
                        <input id="capacity_" type="number" min="0" value="@Model.Capacity" class="form-control num_update">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">White Board:</label>
                    <div class="col-sm-2">
                        <input id="white_board_" min="0" type="number" value="@Model.WhiteBoard" class="form-control num_update">
                    </div>
                    <label class="col-sm-2 control-label">IFP:</label>
                    <div class="col-sm-2">
                        <input id="ifp_" min="0" type="number" value="@Model.IFP" class="form-control num_update">
                    </div>
                    <label class="col-sm-2 control-label">Video Screen:</label>
                    <div class="col-sm-2">
                        <input id="video_screen_" min="0" type="number" value="@Model.Video_Screen" class="form-control num_update">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Computer:</label>
                    <div class="col-sm-2">
                        <input id="computer_" type="number" min="0" value="@Model.Computer" class="form-control num_update">
                    </div>
                    <label class="col-sm-2 control-label">Overhead Projector:</label>
                    <div class="col-sm-2">
                        <input id="overhead_projector_" min="0" type="number" value="@Model.Overhead_projector" class="form-control num_update">
                    </div>
                    <label class="col-sm-2 control-label">Slides Projector:</label>
                    <div class="col-sm-2">
                        <input id="slide_projctor_" min="0" type="number" value="@Model.Slide_projector" class="form-control num_update">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Film Projector:</label>
                    <div class="col-sm-2">
                        <input id="film_projctor_" type="number" min="0" value="@Model.Film_projector" class="form-control num_update">
                    </div>
                    <label class="col-sm-2 control-label">Microphones:</label>
                    <div class="col-sm-2">
                        <input id="microphones_" type="number" min="0" value="@Model.Microphones" class="form-control num_update">
                    </div>
                    <label class="col-sm-2 control-label">Loud Speakers:</label>
                    <div class="col-sm-2">
                        <input id="loud_speakers_" type="number" min="0" value="@Model.LoudSpeakers" class="form-control num_update">
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-1 control-label">Photo:</label>
                    <div class="col-sm-11">
                        <input id="photo_" type="text" value="@Model.Photo" class="form-control not-alone-left" disabled="disabled">
                        <a href="#" onclick="load_upload_file()" class="btn btn-default pull-left"><i class="fa fa-image"></i> </a>
                    </div>
                    <div>
                        <img alt="" id="img_room" style="width:50%;height:100px" hidden="hidden" class="img-circle m-b" src="@{Html.RenderAction("Load_Photo", "MeetingRooms", new { photo = @Model.Photo });}">
                    </div>
                </div>                
            </form>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" onclick="cancel_meetingroom_update()" class="btn btn-default" data-dismiss="modal">Close</button>
    <button type="button" id="update_btn" onclick="confirm_update_meetingroom(@Model.Id)" data-dismiss="modal" class="btn btn-primary">Save changes</button>
</div>
