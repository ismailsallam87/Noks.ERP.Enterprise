@using ATTMS.Dashboard.Resources
@{ 
    var culture = ATTMS.Dashboard.Helpers.CultureHelper.GetCurrentCulture();
}
<div class="color-line">
</div>
<div id="logo" class="light-version">
    <span>
        @Resource.NOKS_ARE_Dashboard
    </span>
</div>
<nav role="navigation">
    <div class="header-link hide-menu"><i class="fa fa-bars"></i></div>
    <div class="small-logo">
        <span class="text-primary">@Resource.NOKS_ARE_APP</span>
    </div>
    <form role="search" class="navbar-form-custom" method="post" action="#">
        <div class="form-group">
            <input type="text" placeholder="@Resource.Search_something_special" class="form-control" name="search">
        </div>
    </form>
    <div class="mobile-menu">
        <button type="button" class="navbar-toggle mobile-menu-toggle" data-toggle="collapse" data-target="#mobile-collapse">
            <i class="fa fa-chevron-down"></i>
        </button>
        <div class="collapse mobile-navbar" id="mobile-collapse">
            <ul class="nav navbar-nav">
                <li>
                    <a class="" href="@Url.Action("Login", "CommonViews")">@Resource.Login</a>
                </li>
                <li>
                    <a class="" href="@Url.Action("Register", "CommonViews")">@Resource.Logout</a>
                </li>
                <li>
                    <a class="" href="@Url.Action("ProfilePage", "AppViews")">@Resource.Profile</a>
                </li>
            </ul>
        </div>
    </div>
    <div class="navbar-right">
        <ul class="nav navbar-nav no-borders">
            @if (culture == "ar-SA")
            {
                <li>
                    <a href="/home/SetCulture?culture=en-US&returnUrl=@Request.Url.AbsoluteUri">English</a>
                </li>
            }
            else
            {
                <li>
                    <a href="/home/SetCulture?culture=ar-EG&returnUrl=@Request.Url.AbsoluteUri"> عربي</a>
                </li>
            }
            <li class="dropdown">
                <a class="dropdown-toggle" href="#" data-toggle="dropdown">
                    <i class="pe-7s-speaker"></i>
                </a>
                <ul class="dropdown-menu hdropdown notification animated flipInX">
                    <li>
                        <a>
                            <span class="label label-success">@Resource.NEW</span> @Resource.It_is_a_long_established
                        </a>
                    </li>
                    <li>
                        <a>
                            <span class="label label-warning">@Resource.WAR</span> @Resource.There_are_many_variations
                        </a>
                    </li>
                    <li>
                        <a>
                            <span class="label label-danger">@Resource.ERR</span> @Resource.Contrary_to_popular_belief
                        </a>
                    </li>
                    <li class="summary"><a href="#">@Resource.See_allnotifications</a></li>
                </ul>
            </li>
            <li class="dropdown">
                <a class="dropdown-toggle" href="#" data-toggle="dropdown">
                    <i class="pe-7s-keypad"></i>
                </a>
                <div class="dropdown-menu hdropdown bigmenu animated flipInX">
                    <table>
                        <tbody>
                            <tr>
                                <td>
                                    <a href="@Url.Action("Projects", "AppViews")">
                                        <i class="pe pe-7s-portfolio text-info"></i>
                                        <h5>@Resource.Projects</h5>
                                    </a>
                                </td>
                                <td>
                                    <a href="@Url.Action("Mailbox", "AppViews")">
                                        <i class="pe pe-7s-mail text-warning"></i>
                                        <h5>@Resource.Email</h5>
                                    </a>
                                </td>
                                <td>
                                    <a href="@Url.Action("Contacts", "AppViews")">
                                        <i class="pe pe-7s-users text-success"></i>
                                        <h5>@Resource.Contacts</h5>
                                    </a>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <a href="@Url.Action("Forum", "AppViews")">
                                        <i class="pe pe-7s-comment text-info"></i>
                                        <h5>@Resource.Forum</h5>
                                    </a>
                                </td>
                                <td>
                                    <a href="@Url.Action("Index", "Analytics")">
                                        <i class="pe pe-7s-graph1 text-danger"></i>
                                        <h5>@Resource.Analytics</h5>
                                    </a>
                                </td>
                                <td>
                                    <a href="@Url.Action("FileManager", "AppViews")">
                                        <i class="pe pe-7s-box1 text-success"></i>
                                        <h5>@Resource.Files</h5>
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </li>
            <li class="dropdown">
                <a class="dropdown-toggle label-menu-corner" href="#" data-toggle="dropdown">
                    <i class="pe-7s-mail"></i>
                    <span class="label label-success">4</span>
                </a>
                <ul class="dropdown-menu hdropdown animated flipInX">
                    <div class="title">
                        @Resource.You_have_4_new_messages
                    </div>
                    <li>
                        <a>
                            @Resource.It_is_a_long_established
                        </a>
                    </li>
                    <li>
                        <a>
                            @Resource.There_are_many_variations.
                        </a>
                    </li>
                    <li>
                        <a>
                            Lorem Ipsum is simply dummy.
                        </a>
                    </li>
                    <li>
                        <a>
                            @Resource.Contrary_to_popular_belief
                        </a>
                    </li>
                    <li class="summary"><a href="#">@Resource.See_All_Messages</a></li>
                </ul>
            </li>
            <li>
                <a href="#" id="sidebar" class="right-sidebar-toggle">
                    <i class="pe-7s-upload pe-7s-news-paper"></i>
                </a>
            </li>
            <li class="dropdown">
             
                        <a href="javascript:document.getElementById('logoutForm').submit()"><i class="pe-7s-upload pe-rotate-90"></i></a>
                
            </li>
        </ul>
    </div>
</nav>
