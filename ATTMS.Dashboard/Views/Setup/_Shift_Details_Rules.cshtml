@using ATTMS.Dashboard.Resources
@using Models
@model List<SP_Shift_Rules_Result>

@if (Model != null && Model.Count > 0)
{
    <table class="table table-hover table-bordered table-striped">
        <tbody>
            @foreach (var rule in Model)
            {
                <tr>
                    <td>
                        <span class="label" style="color:@rule.color">@Resource.color_on_sheet</span>
                    </td>
                    <td class="issue-info">
                        @rule.rule_type
                        <br />
                        <small>
                            @rule.title
                        </small>
                    </td>
                    <td>
                        @rule.range_from
                    </td>
                    <td>
                        @rule.range_to
                    </td>
                </tr>
            }
            
        </tbody>
    </table>
}
else
{
    <p>@Resource.No_Rules_Found_for_this_shift</p>
}



