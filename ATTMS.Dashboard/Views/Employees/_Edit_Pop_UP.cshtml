@using ATTMS.Dashboard.Resources
@using Models
@model SP_Edit_Employee_Result

<div class="modal-body">
    <div class="panel-body">
        @*<div id="Edit_Popup_Content"></div>*@

        <form method="get" class="form-horizontal">
            <div class="form-group">
                <label class="col-sm-2 control-label">@Resource.Employee_Name:</label>
                <div class="col-sm-10">
                    <input id="name_Edt" type="text" class="form-control" value="@Model.name">
                    <span class="help-block m-b-none">@Resource.you_can_Edit_This_employee</span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">@Resource.Employee_code</label>
                <div class="col-sm-10">
                    <input id="code_Edt" type="text" class="form-control" value="@Model.code">
                    <span class="help-block m-b-none">@Resource.you_can_Edit_This_employee_Code</span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">@Resource.SSN</label>
                <div class="col-sm-10">
                    <input id="ssn_Edt" type="text" class="form-control" value="=@Model.ssn">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">@Resource.Mobile</label>
                <div class="col-sm-10">
                    <input id="mobile_Edt" type="text" class="form-control" value="@Model.mobile">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">@Resource.Social_Insurance_Code</label>
                <div class="col-sm-10">
                    <input id="social_insurance_code_Edt" type="text" class="form-control" value="@Model.social_insurance_code">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">@Resource.User</label>
                <div class="col-sm-10">
                    @*@{Html.RenderAction("Employee_User_List", "Setup"); }*@
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">@Resource.Photo</label> 
                <div class="col-sm-10">
                    <input id="photo_Edt" type="text" class="form-control not-alone-left" value="@Model.photo" disabled="disabled">
                    <a href="#" onclick="load_upload_file()" class="btn btn-default pull-left"><i class="fa fa-image"></i> </a>
                </div>
            </div>

        </form>
          
    </div>
</div>
<div class="modal-footer">
    <button type="button" onclick="cancel_employee_Editing()" class="btn btn-default" data-dismiss="modal">@Resource.Close</button>
    <button type="button" onclick="Edit_employee(@Model.Id)" data-dismiss="modal" class="btn btn-primary">@Resource.Save_changes</button>
</div>